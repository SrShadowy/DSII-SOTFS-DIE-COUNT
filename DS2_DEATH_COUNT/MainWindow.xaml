<Window x:Class="DS2_DEATH_COUNT.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DS2_DEATH_COUNT"
        WindowStyle="None" AllowsTransparency="True"
        Topmost="True"
        mc:Ignorable="d"
        Title="MainWindow" Name="MainWin" Height="40" Width="290" >
    <Window.Background>
        <ImageBrush ImageSource="/hud_death_count.png"/>
    </Window.Background>
    <Grid Margin="0,0,0,0">
        <Label x:Name="label_module" Content="0" Margin="0,5,25,3" Padding="0" FontFamily="DengXian" FontSize="20" Foreground="White" HorizontalAlignment="Right">
            <Label.Effect>
                <DropShadowEffect/>
            </Label.Effect>
        </Label>
    </Grid>
</Window>
